<?xml version="1.0" encoding="utf-8"?><!-- RippleView thanks to traex
     to make the Ripple effect when clicked-->
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:rv_color="#434343"
    app:rv_rippleDuration="75"
    app:rv_type="rectangle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/icon_sort_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/icon_sort_menu"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp" />
    </RelativeLayout>
</com.andexert.library.RippleView>